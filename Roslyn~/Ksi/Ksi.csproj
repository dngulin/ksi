<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.1</TargetFramework>
        <Nullable>disable</Nullable>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <RootNamespace>Ksi</RootNamespace>
        <LangVersion>9</LangVersion>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
      <DocumentationFile>bin\Release\netstandard2.1\Ksi.xml</DocumentationFile>
    </PropertyGroup>

    <ItemGroup>
      <Compile Include="..\..\Runtime\**\*.cs" />
    </ItemGroup>
    
    <ItemGroup>
      <ProjectReference Include="..\Ksi.Roslyn\Ksi.Roslyn.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false"/>
    </ItemGroup>

</Project>
